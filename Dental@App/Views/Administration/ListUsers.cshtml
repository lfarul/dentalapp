@model IEnumerable<ApplicationUser>
@using Microsoft.AspNetCore.Identity;

@{
    ViewBag.Title = "All Users";
}

<h4>Zarejestrowane osoby</h4>
<hr />
@if (Model.Any())
{
    <a class="btn btn-outline-dark" style="width:auto" asp-action="Register" asp-controller="Account">Dodaj nowego użytkownika</a>
    <br />
    <br />
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">

                Role Id: @user.Id

            </div>
            <div class="card-body">
                <h5 class="card-title">@user.FirstName @user.LastName</h5>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">

                    <a asp-action="EditUser" asp-controller="Administration"
                       asp-route-id="@user.Id" class="btn btn-outline-primary">Edytuj</a> <!--tutaj przekazuje Id roli którą edytuję-->
                    <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Czy na pewno chcesz usunąć użytkownika: @user.UserName ?')">Usuń</button>
                </form>
            </div>
        </div>

    }
}

else
{
    <div class="card">
        <div class="card-header">
            Brak zarejestrowanych użytkowników do wyświetlenia
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Dodaj nowego użytkownika
            </h5>
            <a class="btn btn-outline-primary" style="width:auto" asp-action="Register" asp-controller="Account">Dodaję</a>
        </div>
    </div>
}

<a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Powrót</a>

