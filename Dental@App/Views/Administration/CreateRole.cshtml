@model Dental_App.ViewModels.CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<img src="~/Images/Various/assist.jpg" align="left" height="150" width="135" />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <br />
            <h4>Dodaj nową rolę</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-outline-primary btn-sm">Dodaję</button>
            <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-outline-secondary btn-sm">Powrót</a>
        </form>
    </div>
</div>
