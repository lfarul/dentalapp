@model Dental_App.ViewModels.EditRoleViewModel

@{
    ViewBag.Title = "Edit User";
}


<h4>Edytuj rolę</h4>
<hr />

<img src="~/Images/Various/assist.jpg" align="left" height="150" width="135" />
<form method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="RoleID" class="col-sm-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="RoleID" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-10">
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-outline-primary">Update</button>
            <a asp-action="ListRoles" class="btn btn-outline-secondary">Powrót</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">

            <h4>Użytkownicy w tych rolach</h4>

        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users.ToList())
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">W tej chwili nie ma żadnego użytkownika</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Administration"
               asp-route-roleId="@Model.RoleID" class="btn btn-outline-primary">Dodaj lub usuń użytkownika</a>
            <a asp-controller="Administration" asp-action="ListRoles" class="btn btn-outline-secondary">Powrót</a>
        </div>
    </div>
</form>

